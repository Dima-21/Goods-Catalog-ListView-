<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:_01_Goods_Catalog">
    <Style x:Key="baseFont">
        <Setter Property="Control.FontFamily" Value="Trebuchet MS"/>
        <Setter Property="Control.FontStyle" Value="Italic"/>
        <Setter Property="Control.Padding" Value="5"/>
    </Style>
    <Style x:Key="font1" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="14"/>
    </Style>
    <Style x:Key="font2" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="18"/>
    </Style>
    <Style x:Key="font3" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="26"/>
        <Setter Property="Control.Foreground" Value="MediumOrchid"/>
    </Style>
    <Style TargetType="GridViewColumnHeader" BasedOn="{StaticResource baseFont}">
        <Setter Property="Padding" Value="25 5"/>
    </Style>
    <Style TargetType="Label" BasedOn="{StaticResource baseFont}">
        <Setter Property="Control.FontSize" Value="18"/>
    </Style>
    <Style TargetType="TextBox" BasedOn="{StaticResource font2}">
        <Setter Property="IsReadOnly" Value="True"/>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource font2}">
    </Style>
</ResourceDictionary>