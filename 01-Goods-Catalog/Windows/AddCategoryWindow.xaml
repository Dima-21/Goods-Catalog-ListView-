<Window x:Class="_01_Goods_Catalog.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01_Goods_Catalog"
        mc:Ignorable="d"
        Title="Добавление категории" Height="300" Width="320">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Добавление категории"
               Style="{StaticResource font3}" FontSize="20" Foreground="DarkCyan"/>
        <TextBox x:Name="category" Style="{StaticResource font2}" TextAlignment="Center"/>
        <Button x:Name="addButton" Content="Добавить" Style="{StaticResource font2}"
               Margin="20" Click="addCategory"/>
    </StackPanel>
</Window>
